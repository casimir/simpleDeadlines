<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <FrameLayout
        android:background="@color/today"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/count_today"
            style="@style/day_count" />
    </FrameLayout>

    <FrameLayout
        android:background="@color/urgent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/count_urgent"
            style="@style/day_count" />
    </FrameLayout>

    <FrameLayout
        android:background="@color/worrying"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/count_worrying"
            style="@style/day_count" />
    </FrameLayout>

    <FrameLayout
        android:background="@color/nice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/count_nice"
            style="@style/day_count" />
    </FrameLayout>
</LinearLayout>